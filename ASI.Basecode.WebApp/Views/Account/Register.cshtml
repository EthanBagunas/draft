<div class="custom-main-container">
    <form method="post" action="/Account/Register">
        <div class="custom-form-container">
            <h1>Create an account</h1>
            <!-- email-->
            <div class="custom-input-box">
                <label class="custom-text-label" for="userId">Email</label>
                <input 
                    class="custom-text-placeholder" 
                    placeholder="Enter your email address" 
                    type="email"
                    id="userId"                    
                    required
                       asp-for="UserId"
                    name="userId"
                    />  
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- full name-->
            <div class="custom-input-box">
                <label class="custom-text-label" for="name">Full Name</label>
                <input  
                    class="custom-text-placeholder" 
                    type="text" 
                    id="name" 
                    asp-for="Name" 
                    placeholder="Enter your full name" 
                    required
                />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <!-- password-->
            <div class="custom-input-box">
                <label class="custom-text-label" for="name">Password</label>
                <input  
                    class="custom-text-placeholder" 
                    type="password" 
                    id="password" 
                    asp-for="Password" 
                    placeholder="Enter your password" 
                    required
                />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- confirm password-->
            <div class="custom-input-box">
                <label class="custom-text-label" for="confirmpassword">Confirm Password</label>
                 <input  
                    class="custom-text-placeholder" 
                    type="password" 
                    id="confirmpassword" 
                    asp-for="ConfirmPassword" 
                    placeholder="Re-enter your password" 
                    required
                />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- terms and conditions-->
             <div class="custom-checkbox">
                <input type="checkbox" id="terms" required>
                <label class="custom-text-label" for="terms">I agree to the terms and conditions</label>
            </div>

            <div class="custom-submit">
                <button type="submit" class="button">Create Account</button>
            </div>

            <div class="custom-register-link">
                <p>Already have an account? <a href="/Account/Login">Sign In here</a></p>
            </div>
        </div>  
    </form>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
