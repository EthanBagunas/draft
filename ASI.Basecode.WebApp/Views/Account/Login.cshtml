@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="container py-5" style="display:flex; align-content:center;height:calc(100vh - 64px)">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0 w-1000px">
                    <div class="col-lg-6">
                        <div class="card-body p-md-5 mx-md-4">
                            <div class="text-center">
                            <!-- logo -->
                                <img src="~/img/Pentacore_Logo.png" 
                                     style="width: 185px;" alt="logo">
                            </div>
                            <form method="post" action="/Account/Login" id="loginForm">
                            <!-- change userId to email -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example11" style="font-family: TimesNewRoman; ">@UserId</label>
                                    <input type="text" id="form2Example11" class="form-control"
                                           asp-for="UserId" placeholder="Enter email" style="border-radius: 20px; font-family: TimesNewRoman; " />
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                                <!-- password -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example22" style="font-family: TimesNewRoman; ">@Password</label>
                                    <input type="password" id="form2Example22" class="form-control"
                                           asp-for="Password" placeholder="Enter password" style="border-radius: 20px; font-family: TimesNewRoman; " />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="login-container">
                                    <div class="forgot-password-container">
                                        <a class="text-muted" href="#!" style="font-family: TimesNewRoman">@ForgotPass</a>
                                    </div>
                                    <div class="login-button-container">
                                        <button class="btn btn-custom login-btn" type="submit" style="background-color: #8a70a4; color: white; font-family: TimesNewRoman; ">
                                            @Login
                                        </button>
                                    </div>
                                </div>
                                <!-- <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2 mr-1">@DontHaveAcc</p>
                                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-danger" style="color: #7A6092; border-color: #7A6092;">@CreateNew</a>
                                </div> -->
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 d-flex">
                        <img style="width:500px; background-position: cover; filter: blur(1px);" src="~/img/reg_bg.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
