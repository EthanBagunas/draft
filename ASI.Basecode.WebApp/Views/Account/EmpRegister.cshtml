@using ASI.Basecode.Services.ServiceModels
@model EmpViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<div class="container py-5 h-100 register-box">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0 custom-card-body">
                    <div class="card-body p-md-5 mx-md-4">
                        <!-- logo -->
                        <div class="text-center">
                            <img src="~/img/Pentacore_Logo.png"
                                 style="width: 150px;" alt="logo">
                        </div>

                        <form method="post" action="/Account/EmpRegister">
                            <!-- empId -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="empId">EmployeeId</label>
                                <input type="text" id="empId" class="form-control"
                                       asp-for="Id" placeholder="Enter email" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>  
                            <!-- name -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="name">Username</label>
                                <input type="text" id="username" class="form-control"
                                       asp-for="Username" placeholder="Enter name" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <!-- password -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="password">Password</label>
                                <input type="password" id="password" class="form-control"
                                       asp-for="Password" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <!-- confirm password -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="confirmpassword">Confirm Password</label>
                                <input type="password" id="confirmpassword" class="form-control" 
                                       asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <!-- terms and conditions -->
                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="terms" />
                                <label class="form-check-label text-white" for="terms">I agree to the terms and conditions</label>
                            </div>
                            <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                <button class="btn btn-primary btn-block login-btn register-btn mb-3" type="submit" style="font-family: TimesNewRoman; font-weight: bold;">
                                    Register
                                </button>
                                <a asp-controller="Account" asp-action="Login" style="color: white; font-family: TimesNewRoman;">
                                    &#8592 Back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}