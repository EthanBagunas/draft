@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section Styles {
    <link rel="stylesheet" href="~/css/headerfinal.css" />
    <link rel="stylesheet" href="~/css/texts.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="icon" type="image/svg+xml" href="~/img/logo-invert.svg">
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Room Information";
}

<body>
    <!-- start sa header logo and tools -->
    <nav class="header">
            <div class="logo-container"> 
                <div class="logo-icon">
                 <img src="~/img/logo-invert.svg " style="color: var(--background-color1);">
                </div>
            </div>
            <div class="grid-container">
                <button class="grid-item-button grid-item-container grid-item i"><i class="fas fa-home"></i></button>
                <button class="grid-item-button grid-item-container grid-item i"><i class="fa-solid fa-door-open"></i></button>
                <button class="grid-item-button grid-item-container grid-item i"><i class="fas fa-user"></i></button>
                <button class="grid-item-button grid-item-container grid-item i"><i class="fas fa-bell"></i></button>
                <button class="grid-item-button grid-item-container grid-item i"><i class="fa-solid fa-right-from-bracket"></i></button>
            </div>
            <div class="profile">
                <span class="custom-text1">Administrator</span>
                <div class="profile-image profile-image-i"><img src="/path/to/profile.jpg" alt="Profile" onerror="this.style.display='none'"><i class="fas fa-user-circle"></i></div>
            </div>
    </nav>
    <!-- start sa header logo and tools -->
</body>

